@model IEnumerable<ProjetoCidades.Models.Cidade>

<div>
    <h2>Cidades</h2>
    <p>
        <a asp-action="Cadastrar">Nova Cidade</a>
    </p>

    <table>
        <thread>
            <tr>
                <th>Id</th>
                <th>Cidade</th>
                <th>Estado</th>
                <th>Habitantes</th>
                <th></th>
            </tr>
        </thread>
        <tbody>
            @{
                foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Nome
                        </td>
                        <td>
                            @item.Estado
                        </td>
                        <td>
                            @item.Habitantes
                        </td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                            <a asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a>
                            <a asp-action="Excluir" asp-route-id="@item.Id" onclick="return confirm('Deseja excluir?')">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>